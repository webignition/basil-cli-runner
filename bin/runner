#!/usr/bin/env php
<?php

declare(strict_types=1);

namespace webignition\BasilRunner\Bin;

const VERSION = 'dev-master';

$pharPath = \Phar::running(false);

if ('' === $pharPath) {
    require 'vendor/autoload.php';
    $projectRootPath = realpath(__DIR__ . '/..');
} else {
    require 'phar://runner.phar/vendor/autoload.php';
    $projectRootPath = realpath(dirname($pharPath));
}

use webignition\BasilCliRunner\Services\CommandFactory;
use webignition\SingleCommandApplicationFactory\Factory;

$command = CommandFactory::createRunCommand($projectRootPath);

$application = (new Factory())->create($command, VERSION);
$application->run();
