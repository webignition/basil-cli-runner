{
    "name": "webignition/basil-cli-runner",
    "description": "CLI runner to execute tests generated from basil source",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-cli-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCliRunner\\": "src",
            "webignition\\BasilCliRunner\\Bin\\": "bin"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCliRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/ecs check --ansi",
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "test-integration": "./vendor/bin/phpunit -c phpunit.integration.xml tests/Integration",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symfony/console": "^5.1",
        "symfony/process": "^5.1",
        "webignition/basil-phpunit-result-printer": "^0.4.0",
        "webignition/single-command-application-factory": "^0.1.0",
        "webignition/symfony-console-typed-input": "^0.5.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "php-mock/php-mock-mockery": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.0",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/yaml": "^5.1",
        "symplify/easy-coding-standard": "^8.1",
        "webignition/base-basil-test-case": "^0.35.0",
        "webignition/basil-compiler-models": "^0.11.0",
        "webignition/basil-parser": ">=0.25,<1",
        "webignition/object-reflector": ">=0.1,<1",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1",
        "webignition/tcp-cli-proxy-client": "^0.7.0",
        "webignition/tcp-cli-proxy-models": "^0.3.0"
    },
    "bin": [
        "bin/runner"
    ],
    "config": {
        "sort-packages": true
    }
}
