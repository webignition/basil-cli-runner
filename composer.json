{
    "name": "webignition/basil-cli-runner",
    "description": "CLI runner to execute tests generated from basil source",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-cli-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCliRunner\\": "src",
            "webignition\\BasilCliRunner\\Bin\\": "bin"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCliRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/ecs check --ansi",
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ],
        "compiler-remove": "rm -f compiler.phar",
        "compiler-fetch": "curl -L https://github.com/webignition/basil-cli-compiler/releases/latest/download/compiler.phar --output compiler.phar",
        "test-integration": [
            "@compiler-remove",
            "@compiler-fetch",
            "./vendor/bin/phpunit --colors=always tests/Integration/Bin/CompileRunTest.php",
            "@compiler-remove"
        ],
        "phar-dump-autoload": "@composer dump-autoload --classmap-authoritative --no-dev --no-scripts --optimize",
        "phar-compile": "@php -dphar.readonly=0 bin/compile.php",
        "phar-build": [
            "rm -f build/runner.phar",
            "@phar-dump-autoload",
            "@phar-compile"
        ],
        "phar-test": [
            "@compiler-remove",
            "@compiler-fetch",
            "@composer dump-autoload",
            "cp ./build/runner.phar .",
            "./vendor/bin/phpunit --colors=always tests/Integration/Phar",
            "@compiler-remove",
            "rm runner.phar"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symfony/console": "^5.1",
        "symfony/finder": "^5.1",
        "symfony/process": "^5.1",
        "webignition/basil-models": "^0.56",
        "webignition/single-command-application-factory": "^0.1.0",
        "webignition/single-command-application-phar-builder": "^0.2.0",
        "webignition/symfony-console-typed-input": "^0.5.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.0",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "3.*",
        "symplify/easy-coding-standard": "^8.1",
        "webignition/base-basil-test-case": "^0.27.0",
        "webignition/basil-parser": ">=0.25,<1",
        "webignition/basil-phpunit-result-printer": "^0.1.0",
        "webignition/object-reflector": ">=0.1,<1",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1"
    },
    "bin": [
        "bin/runner"
    ],
    "config": {
        "sort-packages": true
    }
}
